              <p>2099 S 10th Street Unit 30</p>
              <p>San Jos√©, CA 95112</p>
              <p>Get Directions</p>
              <p> &nbsp; </p>
              <h5>WIFI</h5>
              <p>Free!</p>
              <p> &nbsp; </p>
              <h5>PHONE</h5>
              <p>(877) 855-8620</p>
              <p>or email us!</p>
            </div>
          </div>
        </div>
    </div> 
  </div>
</section>  
<section id="b-products">
  <div style="background-color: #000;" class="pb-3">
    <div class="b-products b-product_grid_style_2">
        <div class="rev_slider fullwidthabanner">
            <div class="row clearfix">
              <div id="demo" class="carousel slide full-width" data-ride="carousel">

                <!-- Indicators -->
                <ul class="carousel-indicators">
                  <li data-target="#demo" data-slide-to="0" class="active"></li>
                  <li data-target="#demo" data-slide-to="1"></li>
                  <li data-target="#demo" data-slide-to="2"></li>
                  <li data-target="#demo" data-slide-to="3"></li>
                  <li data-target="#demo" data-slide-to="4"></li>
                  <li data-target="#demo" data-slide-to="5"></li>
                </ul>

                <!-- The slideshow -->
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <%= image_tag "s1.jpg" %>
                  </div>
                  <div class="carousel-item">
                    <%= image_tag "s2.jpg" %>
                  </div>
                  <div class="carousel-item">
                    <%= image_tag "s3.jpg" %>
                  </div>
                  <div class="carousel-item">
                    <%= image_tag "s4.jpg" %>
                  </div>
                  <div class="carousel-item">
                    <%= image_tag "s5.jpg" %>
                  </div>
                  <div class="carousel-item">
                    <%= image_tag "s6.jpg" %>
                  </div>
                </div>

                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#demo" data-slide="prev">
                  <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#demo" data-slide="next">
                  <span class="carousel-control-next-icon"></span>
                </a>

              </div>
            </div>
        </div>
    </div>
  </div>
</section>
<section id="b-blog">
  <div class="b-blog b-blog_grid text-center b-blog_grid_three mb-3">
    <div class="container">
      <div class="row clearfix b-our_service_text pt-5 mt-4 mb-3 pb-5">
        <div class="col-xl-4 col-lg-4 col-md-5 col-sm-12 col-xs-12">
          <%= image_tag "squarespace.jpg", class: "full-width" %>
        </div>
        <div class="col-xl-8 col-lg-8 col-md-7 col-sm-12 col-xs-12">
          <h3><b>SANTA CRUZ CLASSIC BLONDE ALE & SCREAMING HAND IMPERIAL AMBER ALE</b></h3>
          <p class="text-justify">We've teamed up with Santa Cruz Skateboards to create the crisp, refreshing session craft beer "Classic Dot Blonde Ale". Coming in at just 4.5% ABV, it's a refreshing way to finish the day or keep on going.</p>
          <p>&nbsp;</p>
          <p class="text-justify">Santa Cruz Classic Dot Blonde Ale is a crisp refresher, now available throughout the state of California in 12oz. cans, 22oz bottles, and draft.</p>  
          <p>&nbsp;</p>
          <p class="text-justify">You can pick some up at these California locations.</p>
        </div>
      </div>
    </div>
  </div>
</section>
<% cache(cache_key_for_products) do %>
  <%= render partial: 'spree/shared/products', locals: { products: @products } %>
<% end %>
<section id="b-newsletter">
    <div class="b-newsletter b-newsletter_bg b-newsletter_bg_dark mb-5">
        <div class="b-newsletter_inner">
            <h3 class="text-center">Always be in the know!</h3>
            <h2 class="text-center">SAVE 70% OFF SALE</h2>
            <p class="text-center">Sign up with your email address to received news and updates.</p>
            <div class="b-newsletter_form">
                <form action="#" class="clearfix">
                    <div class="form-group float-left"> 
                        <label>Email address: </label>
                        <input name="email" placeholder="Your email address" required="" type="email"> 
                    </div>  
                    <div class="b-form_submit float-left">    
                        <button class="b-submit">Sign up</button>
                    </div>    
                </form>
            </div>
        </div>
    </div>
</section>
